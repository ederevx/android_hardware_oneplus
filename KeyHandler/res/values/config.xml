<resources>
    <!-- This should match the position of the physical switch, relative
         to the top of the device and is used to align middle position
         notification dialog -->
    <item name="alert_slider_dialog_y" type="fraction">25%</item>

    <!-- This defines by what factor the dialog should be offset. -->
    <item name="alert_slider_mode_offset_y" type="fraction">50%</item>

    <!-- This defines on what side the notification is to be shown 
         by default.

         0 -> DISABLED
         1 -> SHOW_LEFT
         2 -> SHOW_RIGHT -->
    <integer name="alert_slider_notification_location">2</integer>

</resources>
